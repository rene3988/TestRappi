<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prepareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/data_loading_popcorn"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp">

        <View
            android:id="@+id/popcornCircle"
            android:layout_marginTop="60dp"
            android:background="@drawable/circle_bg"
            android:layout_width="185dp"
            android:layout_height="185dp"/>

        <ImageView
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movin_logo_description"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/patrickCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@string/star_icon_description"
            android:src="@drawable/ic_patrick" />

        <ImageView
            android:id="@+id/patrickLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:contentDescription="@string/star_icon_description"
            android:paddingTop="12dp"
            android:src="@drawable/ic_patrick" />

        <ImageView
            android:id="@+id/patrickRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:contentDescription="@string/star_icon_description"
            android:paddingTop="18dp"
            android:src="@drawable/ic_patrick" />
    </FrameLayout>


</LinearLayout>